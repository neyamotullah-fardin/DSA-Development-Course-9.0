#include <iostream>
using namespace std;

void DecToBin(int dec) {
    int n = dec;
    int bin = 0;
    int pow = 1;
    while(n > 0) {
        int rem = n % 2;
        bin = bin + (rem * pow);
        pow = pow * 10;
        n = n / 2;
    }
    cout<<"Binary (" <<dec <<") = " <<bin;
}

int main() {
    DecToBin(88);
    
    return 0;
}
